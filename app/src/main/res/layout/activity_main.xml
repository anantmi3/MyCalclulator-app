<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anant.mycalclulator.MainActivity">


    <TextView
        android:text="Input 1"
        android:textColor="#255fbc"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="11dp"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="1500dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etNum1"
        android:textStyle="normal|bold"
        android:textAlignment="viewEnd"
        android:textColor="#255fbc"
        android:textSize="35sp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="70dp" />

    <EditText
        android:layout_width="1500dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="23dp"
        android:id="@+id/etNum2"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:textStyle="normal|bold"
        android:textAlignment="viewEnd"
        android:textColor="#255fbc"
        android:layout_height="70dp" />

    <TextView
        android:text="Input 2"
        android:textSize="18sp"
        android:textColor="#255fbc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/etNum1"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="1500dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="35dp"
        android:id="@+id/tvResult"
        android:textSize="35sp" />

    <Button
        android:text="Mod"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMod"
        android:layout_below="@+id/etNum2"
        android:layout_toLeftOf="@+id/btnSub"
        android:layout_toStartOf="@+id/btnSub"
        android:layout_marginTop="7dp" />

    <Button
        android:text="/"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDiv"
        android:layout_below="@+id/btnMod"
        android:layout_toRightOf="@+id/btnMod"
        android:layout_toEndOf="@+id/btnMod" />

    <Button
        android:text="*"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMult"
        android:layout_alignBaseline="@+id/btnDiv"
        android:layout_alignBottom="@+id/btnDiv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="-"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSub"
        android:layout_alignBaseline="@+id/btnMod"
        android:layout_alignBottom="@+id/btnMod"
        android:layout_toLeftOf="@+id/btnAdd"
        android:layout_toStartOf="@+id/btnAdd" />

    <Button
        android:text="+"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:layout_alignTop="@+id/btnMod"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
